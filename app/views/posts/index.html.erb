<div class="page-header">
  <h1>Aktuelle Diskussionen</h1>
</div>

<% flash.each do |name, message| %>
<b><% message -%></b>
<% end -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Thema</th>
      <th>Autor</th>
      <th>Aktualisiert</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to shorten_text(post.message), post_path(post) %></td>
        <td>Max Mustermann</td>
        <td>vor <%= format_time_diff post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Neue Diskussion erstellen', new_post_path, 
:class => 'btn btn-primary btn-large' %>
