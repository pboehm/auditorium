<table class="table table-striped">
  <thead>
    <tr>
      <th>Thema</th>
      <th>Autor</th>
      <th>Letzte Aktivit√§t</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= format_link(post) %>
          <%= is_new_post(post) %>
          <%= new_comments(post) %>
        </td>
        <td><%= post.user.name %></td>
        <td>vor <%= format_time_diff post.last_activity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @posts, :class=> "pager",
                          :previous_label => "&larr;", :next_label => "&rarr;",
                          :page_links => false,
                          :style => "font-size: 200%"  %>

<div class="well">
  <%= link_to 'Neue Diskussion erstellen', new_post_path,
        :class => 'btn btn-primary btn-large' %>
</div>
