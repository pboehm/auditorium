<p id="notice"><%= notice %></p>

<p>
  <b>Message:</b>
  <%= @post.message %>
</p>

<% if @post.comments.any? %>

<p>
<b>Comments</b>
<ul>
<% @post.comments.each do |comment| %>
  <li><%= comment.message %></li>
<% end %>
</ul>
</p>

<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
