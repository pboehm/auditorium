<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
      <%= f.input :time, :input_html => {:class => 'input-mini' } %>

    <%= f.input :place %>
    <%= f.input :description %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Abbrechen', posts_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
