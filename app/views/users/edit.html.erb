<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :password, :label => "Passwort:" %>
  <%= f.input :password_confirmation, :label => "Passwortbestätigung:" %>

  <%= f.input :notify_new_posts, :label => "Bei neuen Diskussionen eine Mail senden:" %>

  <div class="form-actions">
    <%= f.button :submit, "Einstellungen ändern", :class => 'btn btn-primary' %>
    <%= link_to 'Abbrechen', posts_path, :class => 'btn' %>
  </div>
<% end %>

